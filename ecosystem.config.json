{
  "apps": [{
    "name": "ubvaia-dev",
    "script": "/srv/sites/ubvaia/node_modules/.bin/ts-node",
    "args": "--transpile-only --project tsconfig.server.json server-custom.ts",
    "cwd": "/srv/sites/ubvaia",
    "env": {
      "NODE_ENV": "development",
      "PORT": "3000",
      "HOSTNAME": "0.0.0.0"
    },
    "max_restarts": 5,
    "min_uptime": "10s",
    "autorestart": true,
    "watch": false,
    "error_file": "/tmp/ubvaia-error.log",
    "out_file": "/tmp/ubvaia-out.log",
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z"
  }]
}
